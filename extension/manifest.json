{
  "manifest_version": 3,
  "name": "SaveX",
  "version": "1.0",
  "description": "Siteleri kaydedip, kaydedilmiş haliyle tekrar açan bir Chrome eklentisi.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "webNavigation",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "32": "assets/images/icon32.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    }
  },
  "icons": {
    "16": "assets/images/icon16.png",
    "32": "assets/images/icon32.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["saved_sites/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
